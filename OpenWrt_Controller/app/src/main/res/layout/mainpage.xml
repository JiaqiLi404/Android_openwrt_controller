<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sta_bac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="OpenWRT Controller"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/now_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="未连接"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="44sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="32dp">

            <ImageView
                android:id="@+id/sm_stapic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@color/colorAccent" />

            <TextView
                android:id="@+id/sm_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="闪讯密码未获得"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/wifi_stapic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@color/colorAccent" />

            <TextView
                android:id="@+id/wifi_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="wifi未连接"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/rt_stapic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@color/colorAccent" />

            <TextView
                android:id="@+id/rt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="路由器未连接"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/net_stapic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@color/colorAccent" />

            <TextView
                android:id="@+id/net_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="无法上网"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="上次更新："
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/last_updatetime"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:text="19/11/20     19：00"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/settingbuttom"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:visibility="invisible"
                app:srcCompat="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="最新密码："
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/sxmm"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:text="000000"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/logbuttom"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="42dp"
            android:paddingEnd="80dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="失效日期："
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/endday"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="19/11/21     21：00"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/getmm"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:onClick="getSXMM"
                android:text="获取密码" />

            <Button
                android:id="@+id/changenet"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:onClick="setRT"
                android:text="修改路由" />
        </LinearLayout>

        <Button
            android:id="@+id/inoneclick"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="40dp"
            android:onClick="oneClick"
            android:text="一键修改闪讯密码" />
    </LinearLayout>
</LinearLayout>